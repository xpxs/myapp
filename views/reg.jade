extends layout
 
block content
 div#content
  h1 #{title}
  if error
   h2 #{error}
  if success
   h2 #{success}
  form(method="post")
   label 用户名：  
   input(type="text" name="name")
   br
   label 密码：  
   input(type="password" name="password")
   br
   label 确认密码：  
   input(type="password" name="password-repeat")
   br
   label 邮箱：  
   input(type="email" name="email")
   br
   input(type="submit" value="注册")