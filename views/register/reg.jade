extends ../pub/layout
 
block content
  div#main
   div.logo
    a(href="/")
      img(src="/images/logo-w.png")
  br
  div.container#content
    div.row
      div.col-md-4.col-md-offset-6.col-sm-6.col-sm-offset-5.col-xs-8.col-xs-offset-2
        h4 账号注册
    br
    div.row
      div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-8.col-xs-offset-2
        form.form-horizontal#reg_form(method="post")
         div.form-group
           label.col-sm-4.control-label 用户名： 
           div.col-sm-8 
            input.form-control(type="text" name="name")
         div.form-group
           label.col-sm-4.control-label 密码：
           div.col-sm-8   
            input.form-control#password(type="password" name="password")
         div.form-group
           label.col-sm-4.control-label 确认密码：  
           div.col-sm-8
            input.form-control(type="password" name="password_repeat")
         div.form-group
           label.col-sm-4.control-label 邮箱：  
           div.col-sm-8
            input.form-control(type="email" name="email")
         div.form-group
          div.col-sm-8.col-sm-offset-4
            input.btn.btn-default#submit(type="submit" value="注册")
            | &nbsp;&nbsp;&nbsp;
            input.btn.btn-default.cancel(type="button" value="重置")
            hr
            span 已有账号？
              a(href="/login") 登录
  include ../pub/footer.jade