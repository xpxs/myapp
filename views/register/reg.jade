extends ../pub/layout
 
block content
  div#main
   div.logo
    a(href="/")
      img(src="/images/logo-w.png")
  br
  div.container#content
    div.row
      div.col-md-4.col-md-offset-4
        h4.col-sm-8.col-md-offset-4 账号注册
    br
    div.row
      div.col-md-4.col-md-offset-4
        form.form-horizontal(method="post")
         div.form-group
           label.col-sm-4.control-label 用户名： 
           div.col-sm-8 
            input.form-control(type="text" name="name")
         div.form-group
           label.col-sm-4.control-label 密码：
           div.col-sm-8   
            input.form-control(type="password" name="password")
         div.form-group
           label.col-sm-4.control-label 确认密码：  
           div.col-sm-8
            input.form-control(type="password" name="password-repeat")
         div.form-group
           label.col-sm-4.control-label 邮箱：  
           div.col-sm-8
            input.form-control(type="email" name="email")
         div.form-group
          div.col-sm-4.col-sm-offset-4
            input.btn.btn-default(type="submit" value="注册")
            hr
            span 已有账号？
              a(href="/login") 登录
  include ../pub/footer.jade