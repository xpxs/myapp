extends ../pub/layout
 
block content
  div#main
   div.logo
    a(href="/")
      img(src="/images/logo-w.png")
  div.container#content
    div.row
      div.col-md-4.col-md-offset-6.col-sm-6.col-sm-offset-5.col-xs-8.col-xs-offset-2
        h4 账号登录
    br
    div.row
      div.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-8.col-xs-offset-2
        form.form-horizontal#login_form(method="post")
         div.form-group
           label.col-sm-4.control-label 用户名： 
           div.col-sm-8 
            input.form-control(type="text" name="name")
         div.form-group
           label.col-sm-4.control-label 密码：
           div.col-sm-8   
            input.form-control(type="password" name="password")
         div.form-group
          div.col-sm-8.col-sm-offset-4
            input.btn.btn-default(type="submit" value="登录")
            hr
            span 没有账号？
              a(href="/reg") 注册
  include ../pub/footer.jade