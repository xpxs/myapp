extends ../pub/layout
 
block content
  include ../pub/nav.jade
  div.container#content
    div.row
      div.col-md-8
        ul.list-unstyled
          each item in news
            li
              h4
                a(href="/news/list/#{item.newsTitle}") #{item.newsTitle}
              p 
                span 来源: #{item.newsBorn}
                span.line
                span 时间: #{item.newsTime}
                span.line
                span 阅读量: #{item.newsRead}
        include ../pub/page.jade
 include ../pub/footer.jade